DB_HOST=127.0.0.1
DB_USER={{ db_user }}
DB_PASSWORD={{ db_password }}
DB_NAME={{ db_name }}
PORT={{ api_port }}

# System user IDs for file ownership
VMAIL_UID={{ vmail_uid }}
VMAIL_GID={{ vmail_gid }}

# Master API key for creating new API keys (keep this secret!)
MASTER_API_KEY={{ master_api_key }}

# Rate Limiting Configuration
# General API rate limiting (all endpoints after auth)
RATE_LIMIT_WINDOW_MS=60000        # Time window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_MAX_REQUESTS=100       # Max requests per window (default: 100)

# Strict rate limiting for resource-intensive operations (mailbox/domain creation)
RATE_LIMIT_STRICT_WINDOW_MS=60000 # Time window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_STRICT_MAX=10          # Max creation requests per window (default: 10)

# Auth rate limiting (prevents brute force on API keys)
RATE_LIMIT_AUTH_WINDOW_MS=900000  # Time window in milliseconds (default: 900000 = 15 minutes)
RATE_LIMIT_AUTH_MAX=5             # Max failed auth attempts (default: 5)
