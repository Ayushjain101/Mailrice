[server]
protocol = http
http_addr = 0.0.0.0
http_port = 3001
domain = {{ hostname }}
root_url = http://{{ hostname }}:3001
serve_from_sub_path = false

[security]
admin_user = admin
admin_password = {{ db_password }}
disable_gravatar = true

[users]
allow_sign_up = false
default_theme = dark

[auth.anonymous]
enabled = false

[dashboards]
default_home_dashboard_path = /var/lib/grafana/dashboards/mailrice-overview.json

[database]
type = sqlite3
path = /var/lib/grafana/grafana.db

[log]
mode = console file
level = info
