# Mailrice v2 Configuration
# Copy this to .env and fill in your values

# Application
APP_NAME="Mailrice v2"
APP_VERSION="2.0.0"
DEBUG=false

# Database
DATABASE_URL=postgresql://mailrice:CHANGE_ME_DB_PASSWORD@localhost/mailrice

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
JWT_SECRET=CHANGE_ME_LONG_RANDOM_STRING
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# API Keys
API_KEY_PREFIX=mr_live_

# Cloudflare DNS (optional)
CF_EMAIL=
CF_API_TOKEN=
CF_ZONE_ID=

# Mail Server
MAIN_DOMAIN=example.com
HOSTNAME=mail.example.com

# Paths
POSTFIX_CONFIG_PATH=/etc/postfix
DOVECOT_CONFIG_PATH=/etc/dovecot
DKIM_KEYS_PATH=/etc/opendkim/keys
VMAIL_PATH=/var/vmail

# Security
BCRYPT_ROUNDS=12
